<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rosaav.marcianito.MainActivity"
    android:background="@drawable/marcianito"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marcianito_saludo"
        android:autoText="true"
        android:textColor="#fffcfc"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/marcianito_accesat"
        android:id="@+id/button"
        android:textColor="#ffffff"
        android:background="@android:color/transparent"
        android:backgroundTint="#ffffff"
        android:longClickable="false"
        style="@style/Base.Theme.AppCompat.Light.Dialog"
        android:elegantTextHeight="false"
        android:nestedScrollingEnabled="false"
        android:singleLine="false"
        android:textSize="@dimen/abc_text_size_title_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
